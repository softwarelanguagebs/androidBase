<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:zhy="http://schemas.android.com/apk/res/com.example.testbase.kuangjia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical" >
   
  <com.example.testbase.hongyang.CustomView4.CustomVolumControlBar
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        zhy:bg="@drawable/customize"
        zhy:circleWidth="12dp"
        zhy:dotCount="20"
        zhy:firstColor4="#252420"
        zhy:secondColor4="#FDFDFD"
        zhy:splitSize="25" />

   <com.example.testbase.hongyang.CustomView4.CustomVolumControlBar
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        zhy:bg="@drawable/icon3"
        zhy:circleWidth="10dp"
        zhy:dotCount="10"
        zhy:firstColor4="#00ff00"
        zhy:secondColor4="#ff0000"
        zhy:splitSize="15" />

    <com.example.testbase.hongyang.CustomView4.CustomVolumControlBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        zhy:bg="@drawable/icon_qq_small"
        zhy:circleWidth="10dp"
        zhy:dotCount="8"
        zhy:firstColor4="#ADC6E5"
        zhy:secondColor4="#0362DB"
        zhy:splitSize="25" />
</LinearLayout>
