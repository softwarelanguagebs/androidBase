<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman="http://schemas.android.com/apk/res/com.example.testbase.kuangjia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_bg6"
        android:orientation="horizontal" >

        <com.example.testbase.imooc.wechat6.ChangeColorIconWithText
            android:id="@+id/id_indicator_one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:color02="#ff45c01a"
            hyman:icon02="@drawable/ic_menu_start_conversation"
            hyman:text02="@string/app_name"
            hyman:text_size02="12sp" />

        <com.example.testbase.imooc.wechat6.ChangeColorIconWithText
            android:id="@+id/id_indicator_two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:color02="#ff45c01a"
            hyman:icon02="@drawable/ic_menu_friendslist"
            hyman:text02="通讯录"
            hyman:text_size02="12sp" />

        <com.example.testbase.imooc.wechat6.ChangeColorIconWithText
            android:id="@+id/id_indicator_three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:color02="#ff45c01a"
            hyman:icon02="@drawable/ic_menu_emoticons"
            hyman:text02="发现"
            hyman:text_size02="12sp" />

        <com.example.testbase.imooc.wechat6.ChangeColorIconWithText
            android:id="@+id/id_indicator_four"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            hyman:color02="#ff45c01a"
            hyman:icon02="@drawable/ic_menu_allfriends"
            hyman:text02="我"
            hyman:text_size02="12sp" />
    </LinearLayout>

</LinearLayout>